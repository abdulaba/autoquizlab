<div class="grid">
  <svg class="grid-svg" xmlns="http://www.w3.org/2000/svg" width="982" height="786" viewBox="0 0 982 786" fill="none">
  </svg>
  <div class="blur"></div>
</div>

<div class="form-containerslo">


  <div class="form-sectionslo" id="login-section">
    <h2>Inicia Sesi√≥n</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions" >
        <button > <%= f.button :submit, "Entrar" %> </button>
      </div>
    <% end %>
    <hr class="sin-color">
    <hr class="sin-color">
    <hr class="sin-color">
    <hr class="sin-color">
 <%= render "devise/shared/links" %>
  </div>
</div>
